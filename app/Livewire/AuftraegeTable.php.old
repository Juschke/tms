<?php

namespace App\Http\Livewire;

use Livewire\Component;
use Livewire\WithPagination;
use App\Models\Auftrag;  // Dein Eloquent Model f체r Auftr채ge (ggf. anpassen)

class AuftraegeTable extends Component
{
    use WithPagination;

    // Verwende das Bootstrap-Theme f체r die Pagination-Links (optional)
    protected $paginationTheme = 'bootstrap';

    public function render()
    {
        // Paginierte Auftr채ge (keine Filter, keine Sortierung)
        $auftraege = Auftrag::with('kunde', 'benutzer')
                            ->orderBy('created_at', 'desc')
                            ->paginate(10);

        return view('livewire.auftraege-table', [
            'auftraege' => $auftraege,
        ]);
    }
}
